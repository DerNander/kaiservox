<Window x:Class="KaiserVox.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KaiserVox Settings"
        Width="460" Height="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Custom RadioButton Style -->
        <Style x:Key="SettingsRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#E4E4E7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="#252538" 
                                BorderBrush="#3F3F5A" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12,10"
                                x:Name="border">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="18" Height="18" 
                                         Stroke="#5A5A7A" 
                                         StrokeThickness="2" 
                                         Fill="Transparent"
                                         x:Name="outerCircle"/>
                                <Ellipse Width="10" Height="10" 
                                         Fill="#2563EB" 
                                         Visibility="Collapsed"
                                         x:Name="innerCircle"/>
                                <ContentPresenter Grid.Column="1" 
                                                  Margin="10,0,0,0" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="innerCircle" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="outerCircle" Property="Stroke" Value="#2563EB"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                                <Setter TargetName="border" Property="Background" Value="#1E2A4A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom CheckBox Style -->
        <Style x:Key="SettingsCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E4E4E7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="20" Height="20" 
                                    Background="#252538" 
                                    BorderBrush="#5A5A7A" 
                                    BorderThickness="2" 
                                    CornerRadius="4"
                                    x:Name="box">
                                <TextBlock Text="âœ“" 
                                           Foreground="White" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"
                                           x:Name="check"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                              Margin="10,0,0,0" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="check" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="box" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="box" Property="BorderBrush" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="box" Property="BorderBrush" Value="#7C7CA0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Shared dark ComboBox style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                  HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,20,0"/>
                                                <Path Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#A0A0BE"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="12,0,32,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDown"
                                        Background="#22223A"
                                        BorderBrush="#3D3D5C"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="220"
                                        Margin="0,4,0,0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#5C5C7E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#2C3E6E"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3D3D5C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="28,20,28,28">

        <!-- Settings Content -->
        <StackPanel Grid.Row="0">
                
                <!-- Hotkey Section -->
                <TextBlock Text="PUSH-TO-TALK HOTKEY"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#6B6B8D"
                           Margin="0,0,0,8"
/>
                
                <Border Background="#22223A" 
                        CornerRadius="8" 
                        Padding="14" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBox x:Name="HotkeyDisplay"
                                     IsReadOnly="True"
                                     Text="Alt + Space"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Padding="0"/>
                            <TextBlock Text="Hold to start dictating"
                                       FontSize="12"
                                       Foreground="#6B6B8D"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <Button x:Name="ChangeHotkeyButton"
                                Grid.Column="1"
                                Content="Change"
                                Background="#3D3D5C"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="16,8"
                                FontSize="13"
                                Cursor="Hand"
                                Click="ChangeHotkeyButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4D4D6C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Microphone Section -->
                <TextBlock Text="MICROPHONE"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#6B6B8D"
                           Margin="0,0,0,8"/>
                
                <Border Background="#22223A" 
                        CornerRadius="6" 
                        Padding="14,12"
                        Margin="0,0,0,20">
                    <ComboBox x:Name="MicrophoneComboBox"
                              FontSize="13"
                              Style="{StaticResource DarkComboBox}"
                              ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                              SelectionChanged="MicrophoneComboBox_SelectionChanged"/>
                </Border>

                <!-- Output Mode Section -->
                <TextBlock Text="OUTPUT MODE"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#6B6B8D"
                           Margin="0,0,0,8"
/>
                
                <StackPanel Margin="0,0,0,20">
                    <RadioButton x:Name="PasteRadio"
                                 Content="Paste into active window"
                                 Style="{StaticResource SettingsRadioButton}"
                                 Margin="0,0,0,8"
                                 Checked="OutputMode_Changed"/>
                    
                    <RadioButton x:Name="ClipboardRadio"
                                 Content="Copy to clipboard only"
                                 Style="{StaticResource SettingsRadioButton}"
                                 Checked="OutputMode_Changed"/>
                </StackPanel>

                <!-- Options Section -->
                <TextBlock Text="OPTIONS"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#6B6B8D"
                           Margin="0,0,0,8"
/>
                
                <StackPanel Margin="0,0,0,20">
                    <CheckBox x:Name="StartupCheckbox"
                              Content="Run on Windows startup"
                              Style="{StaticResource SettingsCheckBox}"
                              Margin="0,0,0,12"
                              Checked="StartupCheckbox_Changed"
                              Unchecked="StartupCheckbox_Changed"/>
                    
                    <CheckBox x:Name="OverlayCheckbox"
                              Content="Show overlay during dictation"
                              Style="{StaticResource SettingsCheckBox}"
                              Checked="OverlayCheckbox_Changed"
                              Unchecked="OverlayCheckbox_Changed"/>
                </StackPanel>

                <!-- Model Section -->
                <TextBlock Text="LOCAL ONLY SPEECH MODEL"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#6B6B8D"
                           Margin="0,0,0,8"/>
                
                <Border Background="#22223A" 
                        CornerRadius="8" 
                        Padding="14">
                    <StackPanel>
                        <TextBlock Text="Model file"
                                   Foreground="#9A9AB8"
                                   FontSize="12"
                                   Margin="0,0,0,6"/>

                        <ComboBox x:Name="ModelComboBox"
                                  FontSize="13"
                                  Style="{StaticResource DarkComboBox}"
                                  ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                                  SelectionChanged="ModelComboBox_SelectionChanged"
                                  HorizontalAlignment="Stretch"
                                  Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock x:Name="ModelStatusText"
                                           Text="ggml-base.en.bin"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                <TextBlock x:Name="ModelSizeText"
                                           Text="Not downloaded"
                                           Foreground="#6B6B8D"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <Button x:Name="RedownloadButton"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    Content="Re-download"
                                    Background="#3D3D5C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="14,8"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Click="RedownloadButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4D4D6C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    </StackPanel>
                </Border>

        </StackPanel>
    </Grid>
</Window>
